    <i3dMappings>
        <i3dMapping id="clearArea1Start" node="0>0|0|0" />
        <i3dMapping id="clearArea1Height" node="0>0|0|0|0" />
        <i3dMapping id="clearArea1Width" node="0>0|0|0|1" />
        <i3dMapping id="hotspot" node="0>0|1" />
        <i3dMapping id="indoorAreas" node="0>0|2" />
